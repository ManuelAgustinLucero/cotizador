{% extends 'base.html.twig' %}

{% block body %}
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8 col-md-7 col-lg-offset-2">
                    <div class="card">
                        <div class="header">
                            <h4 class="title text-center">Cotizador</h4>

                        </div>
                        <div class="content">
                            {{ form_start(form) }}
                            <div class="row">
                                <div class="col-md-6" >
                                    <div class="form-group" >
                                        <label>Marca</label>
                                        {{ form_widget(form.marca, { 'attr': {'class':'form-control border-input'}})}}
                                    </div>
                                </div>

                                {#<div class="col-md-6" >#}
                                    {#<div class="form-group">#}
                                        {#<label class="text-center">Vehiculo</label>#}
                                        {#{{ form_widget(form.vehiculo, { 'attr': {'class':'form-control border-input'}})}}#}
                                    {#</div>#}
                                {#</div>#}
                                <div class="col-md-6 ">
                                    <div class="form-group">
                                        <label class="text-center">Modelo</label>
                                        {{ form_widget( form.modelo , { 'attr': {'class':'form-control border-input'}})}}
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 col-lg-offset-3">
                                    <div class="form-group ">
                                        <label class="text-center">Categoria</label>
                                        {{ form_widget(form.categoria, { 'attr': {'class':'form-control border-input'}})}}
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-md-6 ">
                                    <div class="form-group ">
                                        <label class="text-center">Producto</label>
                                        {{ form_widget(form.producto, { 'attr': {'class':'form-control border-input'}})}}
                                    </div>
                                </div>
                                <div class="col-md-6 ">
                                    <div class="form-group ">
                                        <label class="text-center">Precio</label>
                                        {{ form_widget(form.precio, { 'attr': {'class':'form-control border-input'}})}}
                                    </div>
                                </div>
                                <div class="col-md-6 " style="display: none">
                                    <div class="form-group ">
                                        <label class="text-center">Producto</label>
                                        {{ form_widget(form.createdAt, { 'attr': {'class':'form-control border-input'}})}}
                                    </div>
                                </div>
                            </div>

                            <div class="row hide">

                                <div class="col-md-6 ">
                                    <div class="form-group ">
                                        <label class="text-center">Precio</label>
                                        {{ form_widget(form.updateAt, { 'attr': {'class':'form-control border-input'}})}}
                                    </div>
                                </div>
                            </div>


                            <div class="text-center">
                                <a  class="btn btn-info btn-fill btn-wd"  href="{{ path('admin_cotizador_index') }}">Volver a la lista</a>

                                <input class="btn btn-success btn-fill btn-wd" type="submit" value="Crear" />
                            </div>
                            <div class="clearfix"></div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        $(document).ready(function() { $("#appbundle_cotizador_marca").select2(); });
        $(document).ready(function() { $("#appbundle_cotizador_vehiculo").select2(); });
        $(document).ready(function() { $("#appbundle_cotizador_modelo").select2(); });
        $(document).ready(function() { $("#appbundle_cotizador_categoria").select2(); });
        $(document).ready(function() { $("#appbundle_cotizador_producto").select2(); });
    </script>

{% endblock %}
